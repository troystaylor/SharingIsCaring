        "responses": {
          "200": {
            "description": "List of configuration drifts",
            "schema": {
              "$ref": "#/definitions/configurationDriftCollectionResponse"
            }
          }
        }
      }
    },
    "/beta/admin/configurationManagement/configurationDrifts/{driftId}": {
      "get": {
        "summary": "Get Configuration Drift",
        "description": "Get the properties and relationships of a specific configurationDrift object with detailed information about drifted properties.",
        "operationId": "GetConfigurationDrift",
        "parameters": [
          {
            "name": "driftId",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "The unique identifier of the configuration drift",
            "x-ms-summary": "Drift ID"
          },
          {
            "name": "$select",
            "in": "query",
            "type": "string",
            "description": "Properties to include in response",
            "x-ms-summary": "Select"
          }
        ],
        "responses": {
          "200": {
            "description": "Configuration drift",
            "schema": {
              "$ref": "#/definitions/configurationDrift"
            }
          }
        }
      }
    },
    "/beta/admin/configurationManagement/configurationSnapshotJobs": {
      "get": {
        "summary": "List Snapshot Jobs",
        "description": "Get a list of all configurationSnapshotJob objects and their properties. A maximum of 12 snapshot jobs are visible.",
        "operationId": "ListConfigurationSnapshotJobs",
        "x-ms-visibility": "important",
        "parameters": [
          {
            "name": "$top",
            "in": "query",
            "type": "integer",
            "description": "Number of snapshot jobs to return",
            "x-ms-summary": "Top"
          },
          {
            "name": "$filter",
            "in": "query",
            "type": "string",
            "description": "OData filter expression",
            "x-ms-summary": "Filter"
          },
          {
            "name": "$select",
            "in": "query",
            "type": "string",
            "description": "Properties to include in response",
            "x-ms-summary": "Select"
          },
          {
            "name": "$orderby",
            "in": "query",
            "type": "string",
            "description": "Order results",
            "x-ms-summary": "Order By"
          }
        ],
        "responses": {
          "200": {
            "description": "List of snapshot jobs",
            "schema": {
              "$ref": "#/definitions/configurationSnapshotJobCollectionResponse"
            }
          }
        }
      }
    },
    "/beta/admin/configurationManagement/configurationSnapshotJobs/{snapshotJobId}": {
      "get": {
        "summary": "Get Snapshot Job",
        "description": "Read the properties and relationships of a specific configurationSnapshotJob object.",
        "operationId": "GetConfigurationSnapshotJob",
        "parameters": [
          {
            "name": "snapshotJobId",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "The unique identifier of the snapshot job",
            "x-ms-summary": "Snapshot Job ID"
          },
          {
            "name": "$select",
            "in": "query",
            "type": "string",
            "description": "Properties to include in response",
            "x-ms-summary": "Select"
          }
        ],
        "responses": {
          "200": {
            "description": "Snapshot job",
            "schema": {
              "$ref": "#/definitions/configurationSnapshotJob"
            }
          }
        }
      },
      "delete": {
        "summary": "Delete Snapshot Job",
        "description": "Delete a configurationSnapshotJob object. Use this to make room for new snapshots (max 12 visible).",
        "operationId": "DeleteConfigurationSnapshotJob",
        "parameters": [
          {
            "name": "snapshotJobId",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "The unique identifier of the snapshot job",
            "x-ms-summary": "Snapshot Job ID"
          }
        ],
        "responses": {
          "204": {
            "description": "Snapshot job deleted"
          }
        }
      }
    },
    "/beta/admin/configurationManagement/configurationMonitoringResults": {
      "get": {
        "summary": "List Monitoring Results",
        "description": "Get a list of all configurationMonitoringResult objects and their properties. Shows results from all monitor runs.",
        "operationId": "ListConfigurationMonitoringResults",
