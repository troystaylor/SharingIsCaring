  "definitions": {
    "configurationMonitor": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "Globally unique identifier (GUID) for the monitor"
        },
        "displayName": {
          "type": "string",
          "description": "User-friendly name given to the monitor"
        },
        "description": {
          "type": "string",
          "description": "User-friendly description of the monitor"
        },
        "status": {
          "type": "string",
          "enum": ["active", "unknownFutureValue"],
          "description": "Status of the monitor"
        },
        "mode": {
          "type": "string",
          "enum": ["monitorOnly", "unknownFutureValue"],
          "description": "Monitor mode in which the monitor runs"
        },
        "monitorRunFrequencyInHours": {
          "type": "integer",
          "description": "Frequency at which the monitor runs (default 6 hours)"
        },
        "tenantId": {
          "type": "string",
          "description": "GUID of the tenant for which the monitor runs"
        },
        "createdDateTime": {
          "type": "string",
          "format": "date-time",
          "description": "Date and time when the monitor was created"
        },
        "createdBy": {
          "$ref": "#/definitions/identitySet",
          "description": "The user who created the monitor"
        },
        "lastModifiedDateTime": {
          "type": "string",
          "format": "date-time",
          "description": "Date and time when the monitor was last modified"
        },
        "lastModifiedBy": {
          "$ref": "#/definitions/identitySet",
          "description": "The user who last modified the monitor"
        },
        "inactivationReason": {
          "type": "string",
          "description": "The reason for the monitor's inactivation"
        },
        "parameters": {
          "type": "object",
          "additionalProperties": true,
          "description": "Key-value pairs containing parameter values for the baseline"
        },
        "baseline": {
          "$ref": "#/definitions/configurationBaseline",
          "description": "The baseline attached to this monitor"
        }
      }
    },
    "configurationMonitorCreate": {
      "type": "object",
      "required": ["displayName", "baseline"],
      "properties": {
        "displayName": {
          "type": "string",
          "description": "User-friendly name for the monitor",
          "x-ms-summary": "Display Name"
        },
        "description": {
          "type": "string",
          "description": "Description of the monitor",
          "x-ms-summary": "Description"
        },
        "baseline": {
          "$ref": "#/definitions/configurationBaselineInput",
          "description": "The baseline configuration to monitor"
        },
        "parameters": {
          "type": "object",
          "additionalProperties": true,
          "description": "Key-value pairs for baseline parameters"
        }
      }
    },
    "configurationMonitorUpdate": {
      "type": "object",
      "properties": {
        "displayName": {
          "type": "string",
          "description": "User-friendly name for the monitor",
          "x-ms-summary": "Display Name"
        },
        "description": {
          "type": "string",
          "description": "Description of the monitor",
          "x-ms-summary": "Description"
        },
        "baseline": {
          "$ref": "#/definitions/configurationBaselineInput",
          "description": "Updated baseline (warning: deletes previous results)"
        },
        "parameters": {
          "type": "object",
          "additionalProperties": true,
          "description": "Updated parameters"
        }
      }
    },
    "configurationMonitorCollectionResponse": {
      "type": "object",
      "properties": {
        "@odata.context": {
          "type": "string"
        },
        "@odata.nextLink": {
          "type": "string"
        },
        "value": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/configurationMonitor"
          }
        }
      }
    },
    "configurationDrift": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "Globally unique identifier (GUID) of the drift"
        },
        "monitorId": {
          "type": "string",
          "description": "GUID of the monitor that detected this drift"
        },
        "tenantId": {
          "type": "string",
          "description": "GUID of the tenant"
        },
        "resourceType": {
          "type": "string",
          "description": "Resource type for which the drift is detected"
        },
        "baselineResourceDisplayName": {
          "type": "string",
          "description": "Resource instance for which drift is detected"
        },
        "resourceInstanceIdentifier": {
          "type": "object",
          "additionalProperties": true,
          "description": "Identifier to understand exactly where the drift is"
        },
        "driftedProperties": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/driftedProperty"
          },
          "description": "Properties within resource instances where drift is detected"
        },
        "firstReportedDateTime": {
          "type": "string",
          "format": "date-time",
          "description": "Date and time when drift was first detected"
        },
        "status": {
          "type": "string",
          "enum": ["active", "fixed", "unknownFutureValue"],
          "description": "Status of the drift"
        }
      }
    },
    "driftedProperty": {
      "type": "object",
      "properties": {
        "propertyName": {
          "type": "string",
          "description": "Name of the property that drifted"
        },
        "baselineValue": {
          "type": "string",
          "description": "Expected value from baseline"
        },
        "currentValue": {
          "type": "string",
          "description": "Current value detected"
        }
      }
    },
    "configurationDriftCollectionResponse": {
      "type": "object",
      "properties": {
        "@odata.context": {
          "type": "string"
        },
        "@odata.nextLink": {
          "type": "string"
        },
        "value": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/configurationDrift"
          }
        }
      }
    },
    "configurationSnapshotJob": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "Globally unique identifier (GUID) of the snapshot job"
        },
        "displayName": {
          "type": "string",
          "description": "User-friendly name for the snapshot"
        },
        "description": {
          "type": "string",
          "description": "Description of the snapshot"
        },
        "status": {
          "type": "string",
          "enum": ["notStarted", "running", "succeeded", "failed", "unknownFutureValue", "partiallySuccessful"],
          "description": "Status of the snapshot job"
        },
        "tenantId": {
          "type": "string",
          "description": "GUID of the tenant"
        },
        "createdDateTime": {
          "type": "string",
          "format": "date-time",
          "description": "Date and time when the job was created"
        },
        "createdBy": {
          "$ref": "#/definitions/identitySet",
          "description": "The user who triggered the snapshot"
        },
        "completedDateTime": {
          "type": "string",
          "format": "date-time",
          "description": "Date and time when the job completed"
        },
        "resourceLocation": {
          "type": "string",
          "description": "URL where the snapshot file resides"
        },
        "resources": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Names of all resources included in the snapshot"
        },
        "errorDetails": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Error details if snapshot failed"
        }
      }
    },
    "configurationSnapshotJobCollectionResponse": {
      "type": "object",
      "properties": {
        "@odata.context": {
          "type": "string"
        },
        "@odata.nextLink": {
          "type": "string"
        },
        "value": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/configurationSnapshotJob"
          }
        }
      }
    },
    "configurationMonitoringResult": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "Globally unique identifier (GUID) of the monitor run"
        },
        "monitorId": {
          "type": "string",
          "description": "GUID of the monitor"
        },
        "tenantId": {
          "type": "string",
          "description": "GUID of the tenant"
        },
        "runInitiationDateTime": {
          "type": "string",
          "format": "date-time",
          "description": "Date and time when the monitor run initiated"
        },
        "runCompletionDateTime": {
          "type": "string",
          "format": "date-time",
          "description": "Date and time when the monitor run completed"
        },
        "runStatus": {
          "type": "string",
          "enum": ["successful", "partiallySuccessful", "failed", "unknownFutureValue"],
          "description": "Status of the monitor run"
        },
        "driftsCount": {
          "type": "integer",
          "description": "Number of drifts observed during this run"
        },
        "errorDetails": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/errorDetail"
          },
          "description": "Error details preventing successful completion"
        }
      }
    },
    "errorDetail": {
      "type": "object",
      "properties": {
        "code": {
          "type": "string",
          "description": "Error code"
        },
        "message": {
          "type": "string",
          "description": "Error message"
        },
        "target": {
          "type": "string",
          "description": "Target of the error"
        }
      }
    },
    "configurationMonitoringResultCollectionResponse": {
      "type": "object",
      "properties": {
        "@odata.context": {
          "type": "string"
        },
        "@odata.nextLink": {
          "type": "string"
        },
        "value": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/configurationMonitoringResult"
          }
        }
      }
    },
    "configurationBaseline": {
