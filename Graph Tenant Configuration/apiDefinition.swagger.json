{
  "swagger": "2.0",
  "info": {
    "title": "Graph Tenant Configuration",
    "description": "Microsoft Graph Unified Tenant Configuration Management (UTCM) API connector for monitoring tenant configuration drift, creating baselines, and extracting configuration snapshots. Uses the beta API.",
    "version": "1.0.0",
    "contact": {
      "name": "Troy Taylor",
      "email": "troytaylor@microsoft.com"
    }
  },
  "host": "graph.microsoft.com",
  "basePath": "/",
  "schemes": [
    "https"
  ],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/mcp": {
      "post": {
        "summary": "Invoke Tenant Configuration MCP",
        "description": "Sends JSON-RPC requests to invoke Tenant Configuration Management tools via MCP for Copilot Studio integration.",
        "operationId": "InvokeMCP",
        "x-ms-agentic-protocol": "mcp-streamable-1.0",
        "responses": {
          "200": {
            "description": "MCP response"
          }
        }
      }
    },
    "/beta/admin/configurationManagement/configurationMonitors": {
      "get": {
        "summary": "List Configuration Monitors",
        "description": "Get a list of all configurationMonitor objects and their properties. Monitors run periodically to detect configuration drift.",
        "operationId": "ListConfigurationMonitors",
        "x-ms-visibility": "important",
        "parameters": [
          {
            "name": "$top",
            "in": "query",
            "type": "integer",
            "description": "Number of monitors to return",
            "x-ms-summary": "Top"
          },
          {
            "name": "$filter",
            "in": "query",
            "type": "string",
            "description": "OData filter expression",
            "x-ms-summary": "Filter"
          },
          {
            "name": "$select",
            "in": "query",
            "type": "string",
            "description": "Properties to include in response",
            "x-ms-summary": "Select"
          },
          {
            "name": "$orderby",
            "in": "query",
            "type": "string",
            "description": "Order results",
            "x-ms-summary": "Order By"
          }
        ],
        "responses": {
          "200": {
            "description": "List of configuration monitors",
            "schema": {
              "$ref": "#/definitions/configurationMonitorCollectionResponse"
            }
          }
        }
      },
      "post": {
        "summary": "Create Configuration Monitor",
        "description": "Create a new configurationMonitor object that runs periodically in the background at a scheduled frequency (every 6 hours).",
        "operationId": "CreateConfigurationMonitor",
        "x-ms-visibility": "important",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/configurationMonitorCreate"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created monitor",
            "schema": {
              "$ref": "#/definitions/configurationMonitor"
            }
          }
        }
      }
    },
    "/beta/admin/configurationManagement/configurationMonitors/{monitorId}": {
      "get": {
        "summary": "Get Configuration Monitor",
        "description": "Get the properties and relationships of a specific configurationMonitor object.",
        "operationId": "GetConfigurationMonitor",
        "parameters": [
          {
            "name": "monitorId",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "The unique identifier of the configuration monitor",
            "x-ms-summary": "Monitor ID"
          },
          {
            "name": "$select",
            "in": "query",
            "type": "string",
            "description": "Properties to include in response",
            "x-ms-summary": "Select"
          },
          {
            "name": "$expand",
            "in": "query",
            "type": "string",
            "description": "Related entities to expand (e.g., baseline)",
            "x-ms-summary": "Expand"
          }
        ],
        "responses": {
          "200": {
            "description": "Configuration monitor",
            "schema": {
              "$ref": "#/definitions/configurationMonitor"
            }
          }
        }
      },
      "patch": {
        "summary": "Update Configuration Monitor",
        "description": "Update the properties of a configurationMonitor object, including the monitor name, description, and baseline. Note: Updating baseline deletes all previous monitoring results and drifts.",
        "operationId": "UpdateConfigurationMonitor",
        "parameters": [
          {
            "name": "monitorId",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "The unique identifier of the configuration monitor",
            "x-ms-summary": "Monitor ID"
          },
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/configurationMonitorUpdate"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Updated monitor",
            "schema": {
              "$ref": "#/definitions/configurationMonitor"
            }
          }
        }
      },
      "delete": {
        "summary": "Delete Configuration Monitor",
        "description": "Permanently delete a configurationMonitor object and all its associated monitoring results and drifts.",
        "operationId": "DeleteConfigurationMonitor",
        "parameters": [
          {
            "name": "monitorId",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "The unique identifier of the configuration monitor",
            "x-ms-summary": "Monitor ID"
          }
        ],
        "responses": {
          "204": {
            "description": "Monitor deleted"
          }
        }
      }
    },
    "/beta/admin/configurationManagement/configurationMonitors/{monitorId}/baseline": {
      "get": {
        "summary": "Get Monitor Baseline",
        "description": "Read the properties and relationships of a configurationBaseline object attached to a specific monitor.",
        "operationId": "GetMonitorBaseline",
        "parameters": [
          {
            "name": "monitorId",
