        "responses": {
          "200": {
            "description": "Monitoring result",
            "schema": {
              "$ref": "#/definitions/configurationMonitoringResult"
            }
          }
        }
      }
    },
    "/beta/admin/configurationManagement/configurationBaselines/{baselineId}": {
      "get": {
        "summary": "Get Configuration Baseline",
        "description": "Read the properties and relationships of a configurationBaseline object including its resources and parameters.",
        "operationId": "GetConfigurationBaseline",
        "parameters": [
          {
            "name": "baselineId",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "The unique identifier of the configuration baseline",
            "x-ms-summary": "Baseline ID"
          },
          {
            "name": "$select",
            "in": "query",
            "type": "string",
