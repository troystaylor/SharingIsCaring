{
    "properties": {
        "connectionParameters": {
            "token": {
                "type": "oauthSetting",
                "oAuthSettings": {
                    "identityProvider": "oauth2",
                    "clientId": "[[REPLACE_WITH_HUBSPOT_CLIENT_ID]]",
                    "scopes": [
                        "crm.objects.companies.read crm.objects.companies.write crm.objects.owners.read crm.objects.deals.read crm.objects.deals.write sales-email-read crm.objects.contacts.read automation crm.schemas.custom.read crm.objects.custom.read crm.objects.custom.write"
                    ],
                    "redirectMode": "GlobalPerConnector",
                    "customParameters": {
                        "AuthorizationUrl": {
                            "value": "https://app.hubspot.com/oauth/authorize"
                        },
                        "TokenUrl": {
                            "value": "https://api.hubapi.com/oauth/v3/token"
                        },
                        "RefreshUrl": {
                            "value": "https://api.hubapi.com/oauth/v3/token"
                        }
                    }
                }
            },
            "token:clientId": {
                "type": "string",
                "uiDefinition": {
                    "displayName": "Client ID",
                    "schema": {
                        "type": "string",
                        "description": "Client ID from your HubSpot OAuth app"
                    },
                    "tooltip": "Found on your HubSpot app's Auth settings page",
                    "constraints": {
                        "required": "true"
                    }
                }
            },
            "token:clientSecret": {
                "type": "securestring",
                "uiDefinition": {
                    "displayName": "Client Secret",
                    "schema": {
                        "type": "securestring",
                        "description": "Client secret from your HubSpot OAuth app"
                    },
                    "tooltip": "Found on your HubSpot app's Auth settings page",
                    "constraints": {
                        "required": "true"
                    }
                }
            }
        },
        "iconBrandColor": "#ff7a59",
        "capabilities": [
            "actions"
        ],
        "publisher": "Troy Taylor",
        "stackOwner": "HubSpot",
        "scriptOperations": [
            "InvokeMCP"
        ]
    }
}