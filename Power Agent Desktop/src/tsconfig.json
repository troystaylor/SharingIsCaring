{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "include": [
    "mcp-server/**/*.ts",
    "agent/**/*.ts",
    "ui/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "desktop/**/*.ts"
  ]
}
